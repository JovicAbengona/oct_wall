<% messages.each do |message| %>
    <div id="message_<%= message['message_id'] %>">
        <h3><%= "#{message['first_name']} #{message['last_name']}" %> â€¢ <%= message['updated_at'].strftime("%b %e, %Y %I:%M %P") %></h3>
        <p class="message_content"><%= message['content'] %></p>
        <% if session['id'].to_i === message['user_id'].to_i  %>
            <button type="button" class="delete_message" data-message_id=<%= message['message_id'] %>>DELETE</button>
        <% end %>

        <h3>Comments</h3>
        <div id="message_<%= message['message_id'] %>_comments" class="message_comments">
            <% if !message['comments'] %>
                <h3 class="no_comments">No Comments.</h3>
            <% else %>
                <%= render :partial => "comments/partials/comments_partial", :locals => { :comments => JSON.parse(message['comments']) } %>
            <% end %>
        </div>

        <label for="message_<%= message['message_id'] %>_comment_content">Leave a comment:</label>
        <textarea id="message_<%= message['message_id'] %>_comment_content" class="message_comment" rows="5"></textarea>
        <button type="button" class="create_comment" data-message_id=<%= message['message_id'] %>>Submit</button>
    </div>
<% end %>