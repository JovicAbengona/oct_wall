<form id="create_message" action="/messages/create_message" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="create_message_content">Create a message: </label>
    <textarea id="create_message_content" name="content" rows="8"></textarea>
    <button type="submit">Submit</button>
</form>

<h1>Messages</h1>
<div id="messages_html">
    <% if @messages.nil? %>
        <h3>No Messages</h3>
    <% else %>
        <%= render :partial => "messages/partials/messages_partial", :locals => { :messages => @messages } %>
    <% end %>
</div>

<form id="create_comment" action="/comments/create_comment" method="POST" hidden>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="user_id" value="<%= session["id"] %>">
    <input type="hidden" name="message_id">
    <input type="hidden" name="content">
</form>

<form id="delete_comment" action="/comments/delete_comment" method="POST" hidden>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="user_id" value="<%= session["id"] %>">
    <input type="hidden" name="comment_id">
</form>

<form id="delete_message" action="/messages/delete_message" method="POST" hidden>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="user_id" value="<%= session["id"] %>">
    <input type="hidden" name="message_id">
</form>